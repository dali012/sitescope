generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// -----------------------------------------------------------------------------
// USER & AUTHENTICATION
// -----------------------------------------------------------------------------

model User {
  id            String        @id
  name          String
  email         String
  emailVerified Boolean       @default(false)
  image         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  sessions      Session[]
  accounts      Account[]
  brainItems    BrainItem[]
  monitors      Monitor[]
  subscription  Subscription?
  settings      Settings?
  integrations  Integration[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// -----------------------------------------------------------------------------
// APP CORE: MONITORING & BRAIN
// -----------------------------------------------------------------------------
model BrainItem {
  id          String  @id @default(cuid())
  title       String
  description String? @db.Text
  url         String?
  favicon     String?

  // Enums mapped from types.ts: 'website' | 'api' | 'doc' | 'log'
  type BrainType

  // Postgres supports native scalar lists for tags
  tags String[]

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Monitor {
  id   String @id @default(cuid())
  name String

  // Enums mapped from types.ts: 'uptime' | 'report' | 'performance'
  type MonitorType

  url       String?
  method    String  @default("GET")
  frequency String  @default("5 min")

  // Status tracking
  status  MonitorStatus @default(ACTIVE)
  lastRun DateTime?
  nextRun DateTime?

  // Relations
  incidents   Incident[]
  latencyLogs LatencyLog[]
  uptimeLogs  UptimeLog[]

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Stores historical performance data for the Charts
model LatencyLog {
  id        String   @id @default(cuid())
  latency   Int // in ms
  timestamp DateTime @default(now())

  monitorId String
  monitor   Monitor @relation(fields: [monitorId], references: [id], onDelete: Cascade)

  @@index([monitorId, timestamp])
}

// Stores uptime checks (success/failure)
model UptimeLog {
  id        String   @id @default(cuid())
  isUp      Boolean
  timestamp DateTime @default(now())

  monitorId String
  monitor   Monitor @relation(fields: [monitorId], references: [id], onDelete: Cascade)
}

// -----------------------------------------------------------------------------
// INCIDENT MANAGEMENT (AI Features)
// -----------------------------------------------------------------------------

model Incident {
  id       String         @id @default(cuid())
  status   IncidentStatus @default(OPEN)
  severity Severity       @default(HIGH)

  startedAt  DateTime  @default(now())
  resolvedAt DateTime?

  // AI Generated Content
  rootCause  String? @db.Text
  postMortem String? @db.Text // The PDF/Markdown report content

  monitorId String
  monitor   Monitor @relation(fields: [monitorId], references: [id])
}

// -----------------------------------------------------------------------------
// BILLING & SUBSCRIPTION
// Support for src/app/(dashboard)/billing/page.tsx
// -----------------------------------------------------------------------------

model Subscription {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  plan   PlanType @default(HOBBY)
  status String // e.g., 'active', 'past_due'

  // Payment Provider Details
  stripeCustomerId     String?
  stripeSubscriptionId String?

  // Usage Limits tracking
  currentMonitorCount Int @default(0)
  currentApiUsage     Int @default(0)

  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
}

model Invoice {
  id     String   @id @default(cuid())
  amount Decimal
  status String // 'Paid', 'Pending'
  date   DateTime
  pdfUrl String?

  // In a real app, this might link to Subscription or User
  userId String
}

// -----------------------------------------------------------------------------
// SETTINGS & CONFIGURATION
// Support for src/app/(dashboard)/settings/page.tsx
// -----------------------------------------------------------------------------

model Settings {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Preferences
  theme String @default("system")

  // Notification Toggles
  emailAlerts        Boolean @default(true)
  slackNotifications Boolean @default(true)
  weeklyReport       Boolean @default(false)
  marketingEmails    Boolean @default(false)
}

model Integration {
  id        String          @id @default(cuid())
  type      IntegrationType // DATADOG, SLACK
  config    Json? // Store API keys/webhooks (encrypted ideally)
  isEnabled Boolean         @default(false)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// -----------------------------------------------------------------------------
// ENUMS
// -----------------------------------------------------------------------------

enum BrainType {
  WEBSITE
  API
  DOC
  LOG
  STATUS_PAGE
}

enum MonitorType {
  UPTIME
  PERFORMANCE
  REPORT
}

enum MonitorStatus {
  ACTIVE
  PAUSED
  FAILED
}

enum IncidentStatus {
  OPEN
  RESOLVED
  INVESTIGATING
}

enum Severity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum PlanType {
  HOBBY
  PRO
  ENTERPRISE
}

enum IntegrationType {
  SLACK
  DATADOG
}
